<UserControl x:Class="KtvStudio.Views.SingerInfoEditUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KtvStudio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Height="40" Background="White" Margin="0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Margin="2 5 5 5" Width="10"
                                       Height="{Binding ElementName=toggleButtonBaseInfo,Path=Height}"
                                       Background="#A0D8F0" />
                <ToggleButton Name="toggleButtonBaseInfo"
                                          DockPanel.Dock="Right"
                                          IsTabStop="False"
                                          HorizontalAlignment="Left"
                                          Background="White"
                                          BorderThickness="0"
                                          BorderBrush="Transparent"
                                          Padding="5 0"
                                          IsChecked="True"
                                          Content="歌手信息"
                                          FontSize="13"
                                          FontWeight="Normal"
                                          HorizontalContentAlignment="Left" />
            </DockPanel>
        </Border>
        <Border Grid.Row="1"
                            Background="#FFE0E0E0"
                            BorderThickness="0 2 0 0"
                            BorderBrush="#A0D8F0"
                            Padding="0 3"
                            Visibility="{Binding ElementName=toggleButtonBaseInfo,Path=IsChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="歌手姓名"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <TextBox Grid.Row="0" Grid.Column="1" MinWidth="200" Margin="5"
                         Text="{Binding SingerInfoEditItem.SingerName}"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="歌手英文名"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <TextBox Grid.Row="0" Grid.Column="3" MinWidth="200" Margin="5"
                         Text="{Binding SingerInfoEditItem.SingerEnglishName}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="歌手别名"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <TextBox Grid.Row="1" Grid.Column="1" MinWidth="200" Margin="5"
                         Text="{Binding SingerInfoEditItem.SingerOtherName}"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="歌手性别"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <TextBox Grid.Row="1" Grid.Column="3" MinWidth="200" Margin="5"
                         Text="{Binding SingerInfoEditItem.SingerSex}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="歌手热度"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <TextBox Grid.Row="2" Grid.Column="1" MinWidth="200" Margin="5"
                         Text="{Binding SingerInfoEditItem.SingerClickNum}"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="歌手地区"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <TextBox Grid.Row="2" Grid.Column="3" MinWidth="200" Margin="5"
                         Text="{Binding SingerInfoEditItem.SingerNationality}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="歌手介绍"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <TextBox Grid.Row="3" Grid.Column="1" MinWidth="200" Margin="5"
                         Text="{Binding SingerInfoEditItem.SingerIntroduce}"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="歌手照片"
                           VerticalAlignment="Center" Margin="5 5 0 5"/>
                <Image Grid.Row="3" Grid.Column="3" Width="50" Margin="5 5 0 5"
                       Source="{Binding SingerInfoEditItem.SingerPhotoUrl}"/>
                <Button Grid.Row="4" Grid.Column="0" Content="上传图片" HorizontalAlignment="Center" Height="30"
                        Command="{Binding SingerImageUpLoadCmd}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
